{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Work Reference Info",
  "allOf": [
    {
      "$ref": "Topper.json"
    },
    {
      "type": "object",
      "properties": {
        "language": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "x-json-property": "http://bibfra.me/vocab/lite/language"
        },
        "subjects": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Subject.json"
          },
          "x-json-property": "http://bibfra.me/vocab/lite/subject"
        },
        "classification": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "DeweyDecimalClassification.json"
          },
          "x-json-property": "http://bibfra.me/vocab/lite/classification"
        },
        "_creatorReference": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Agent.json"
          }
        },
        "_contributorReference": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Agent.json"
          }
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Category.json"
          },
          "x-json-property": "http://bibfra.me/vocab/marc/content"
        }
      }
    }
  ]
}
