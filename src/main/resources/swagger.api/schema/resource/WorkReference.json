{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Work Reference Info",
  "allOf": [
    {
      "$ref": "Topper.json"
    },
    {
      "type": "object",
      "properties": {
        "title": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "title": "BasicTitleField",
                "properties": {
                  "BasicTitle": {
                    "type": "object",
                    "$ref": "title/BasicTitle.json",
                    "x-json-property": "http://bibfra.me/vocab/marc/Title"
                  }
                }
              },
              {
                "type": "object",
                "title": "VariantTitleField",
                "properties": {
                  "VariantTitle": {
                    "type": "object",
                    "$ref": "title/VariantTitle.json",
                    "x-json-property": "http://bibfra.me/vocab/marc/VariantTitle"
                  }
                }
              },
              {
                "type": "object",
                "title": "ParallelTitleField",
                "properties": {
                  "ParallelTitle": {
                    "type": "object",
                    "$ref": "title/ParallelTitle.json",
                    "x-json-property": "http://bibfra.me/vocab/marc/ParallelTitle"
                  }
                }
              }
            ]
          },
          "x-json-property": "http://bibfra.me/vocab/marc/title"
        },
        "language": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "x-json-property": "http://bibfra.me/vocab/lite/language"
        },
        "subjects": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Reference.json"
          },
          "x-json-property": "http://bibfra.me/vocab/lite/subject"
        },
        "classification": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "DeweyDecimalClassification.json"
          },
          "x-json-property": "http://bibfra.me/vocab/lite/classification"
        },
        "_creatorReference": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Agent.json"
          }
        },
        "_contributorReference": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Agent.json"
          }
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "Category.json"
          },
          "x-json-property": "http://bibfra.me/vocab/marc/content"
        }
      }
    }
  ]
}
